	public saveMoney(BankDemo band) {
		this.bank = bank;
	}

	@Override
	public void run() {
		// TODO Auto-generated method stub
		SimpleDateFormat sdFormat = new SimpleDateFormat("yyyyÄêMMÔÂddÈÕHH£ºmm£ºss");
		String string = sdFormat.format(new Date());
